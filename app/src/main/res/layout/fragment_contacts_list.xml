            android:textStyle="italic|bold"
            app:layout_constraintStart_toStartOf="@+id/thirdUserName"
            app:layout_constraintTop_toBottomOf="@+id/thirdUserName"
            tool:text="89998887766" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fourthUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_cl_list"
        android:layout_marginVertical="@dimen/margin_vertical_cl_list"
        android:background="@drawable/items_back"
        android:elevation="@dimen/elevation_list"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fourthUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_name"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="Пользователь Четвертый" />

        <TextView
            android:id="@+id/fourthUserSurName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_surname"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/fourthUserName"
            app:layout_constraintTop_toTopOf="parent"
            tool:text="Пользовательский" />

        <TextView
            android:id="@+id/fourthUserNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_phone"
            android:textStyle="italic|bold"
            app:layout_constraintStart_toStartOf="@+id/fourthUserName"
            app:layout_constraintTop_toBottomOf="@+id/fourthUserName"
            tool:text="89998887766" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>